html
  head
    title= title
    link(rel='stylesheet', href='/css/index.css')
    script.
        function openProfile(e) {
            window.location.href = "/api/profile"
        }
  body
    div.container
        div.header
            div.heading.
                Welcome to next Gen Power Control
            div.button
                //- button(onclick='openProfile()',name="submit").
                //-     Profile
                a(href="/api/profile") Profile
            .button
                 a(href="/api/logout") Logout
        div.body
            div.row-1
                table
                    title='PowerConsumption'
                    //- div.table-column.
                    //-     Appliance
                    //- div.table-column.
                    //-     Time
                    //- div.table-column.
                    //-     Power Usage
                    thead  
                        tr
                            th='Appliance'
                            th= 'RunTime'
                            th= 'Power Usage'
                            th='Cost'
                            th='Date - Time'
                    tbody
                        for d in data         
                            tr
                                td=d['name']
                                td= d['time']
                                td=d['power']+'W'
                                td=d['cost']
                                td=d['date']

            div.row-2
               table.first
                thead
                    tr
                        th='Username'
                        th='Total Power'
                        th='Total Bill'
                tbody
                    tr
                        td="Hemanth"
                        td="55W"
                        td="300rs"
        .footer
            h2  Footer
